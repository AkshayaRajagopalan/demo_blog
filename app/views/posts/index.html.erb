<% content_for :page_title, "Index" %>



<section class="section">
    <div class="container">
        <% @posts.each do |post| %>
            <div class="card">
                <div class="card-content">
                    <div class="media">
                        <div class="media-content">
                            <p class="is-4" ><strong><%= link_to post.title, post %></strong></p>
                        </div>
                    </div>
                    <div class="content">
                        <%= post.content %>
                    </div>
                </div>
            </div>
        <%end%>
    </div>
</section>