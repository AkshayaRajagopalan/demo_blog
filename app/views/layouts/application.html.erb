<!DOCTYPE html>
<html>
  <head>
    <title>DemoBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <section class="hero is-primary is-medium">
      <div class="hero-head">
        <nav class="navbar">
          <div class="container">
            <div class="navbar-brand">
              <%= link_to 'Home', root_path, class: "navbar-item" %>
            </div>
            <div class="navbar-brand">
              <%= link_to 'About', static_pages_about_path, class: "navbar-item" %>
            </div>
            <div class="navbar-brand">
              <%= link_to 'Blogs', posts_path, class: "navbar-item" %>
            </div>
            <div class="navbar-brand">
              <%= link_to 'Help/Contact', static_pages_help_path, class: "navbar-item" %>
            </div>
            <div id="navbarMenuHeroA" class="navbar-menu">
              <div class="navbar-end">
                <%= link_to "Create New Post", new_post_path, class: "navbar-item" %>
              </div>
            </div>
          </div>
        </nav>
      </div>

      <div class="hero-body">
        <div class="container has-text-centered">
          <h1 class="title">
            <%= yield :page_title %>
          </h1>
        </div>
      </div>
    </section>

    <%= yield %>
  </body>
</html>
